<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the line -->
    <!-- left 和right是左右边距 -->
    <item
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/line_color" />
        </shape>
    </item>
    <!--bottom是横线高度 -->
    <item android:bottom="1dp">
        <shape>
            <solid android:color="@color/colorWhite" />
        </shape>
    </item>

</layer-list>
