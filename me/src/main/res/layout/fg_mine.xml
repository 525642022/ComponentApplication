<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="212dp">

        <ImageView
            android:id="@+id/mine_head_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/me_geren_bg" />

        <com.example.uilibrary.view.RoundAngleImageView
            android:id="@+id/fg_mine_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:src="@mipmap/me_touxiang_weidenglu"
            app:roundHeight="40dp"
            app:roundWidth="40dp" />

        <TextView
            android:id="@+id/fg_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fg_mine_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:visibility="gone"
            android:includeFontPadding="false"
            android:text="进不得沙的眼睛"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/fg_user_register"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:layout_below="@+id/fg_mine_icon"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="@drawable/me_round_login_12"
            android:layout_marginEnd="94dp"
            android:layout_marginTop="17dp"
            android:includeFontPadding="false"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/fg_user_login"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:layout_below="@+id/fg_mine_icon"
            android:gravity="center"
            android:layout_marginStart="94dp"
            android:background="@drawable/me_round_login_12"
            android:layout_marginTop="17dp"
            android:includeFontPadding="false"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/fg_user_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fg_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:includeFontPadding="false"
            android:text="积分：80"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/fg_order_list"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:text="我的订单"
            android:textColor="@color/colorTextBlack"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/me_jiantou" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/fg_about_us"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:text="关于我们"
            android:textColor="@color/colorTextBlack"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:src="@mipmap/me_jiantou" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@color/colorLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:text="当前版本"
            android:textColor="@color/colorTextBlack"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/fg_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:gravity="center_vertical"
            android:text="V1.0.1"
            android:textColor="@color/colorTextBlack"
            android:textSize="14dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@color/colorLine" />
    <RelativeLayout
        android:id="@+id/fg_login_out"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="56dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="13dp"
            android:text="退出"
            android:textColor="@color/colorTextBlack"
            android:textSize="17dp" />


    </RelativeLayout>

</LinearLayout>