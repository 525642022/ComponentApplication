<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_shop_rl"
    android:layout_height="149dp">

    <ImageView
        android:id="@+id/item_shop_icon"
        android:layout_width="113dp"
        android:layout_height="72dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/item_shop_icon"
        android:includeFontPadding="false"
        android:text="天猫精灵 X1智能音箱wifi声控智能音响语音"
        android:textColor="@color/colorTextBlack"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_shop_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_shop_title"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/item_shop_icon"
        android:includeFontPadding="false"
        android:text="99"
        android:textColor="@color/color_orange"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_shop_money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_shop_money"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/item_shop_money"
        android:includeFontPadding="false"
        android:text="积分"
        android:textColor="@color/color_orange"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_shop_ori_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_shop_money"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/item_shop_money_text"
        android:includeFontPadding="false"
        android:text="原价：59.90"
        android:textColor="@color/colorLine_89"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_shop_get"
        android:layout_width="113dp"
        android:layout_height="28dp"
        android:layout_below="@+id/item_shop_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/shop_round_register"
        android:gravity="center"
        android:text="点击免费拿"
        android:textColor="@color/color_orange"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@color/line_color" />
</RelativeLayout> 