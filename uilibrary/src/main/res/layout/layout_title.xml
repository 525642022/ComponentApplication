<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopTitleRl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/title_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color" />

    <ImageView
        android:id="@+id/title_left_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:contentDescription="@string/app_name"
        android:paddingStart="13dp"
        android:paddingTop="14dp"
        android:paddingEnd="13dp"
        android:paddingBottom="14dp"
        android:src="@mipmap/ico_btn_back"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorTextBlack"
        android:textSize="17dp"
        tools:ignore="SpUsage"
        tools:text="title" />

    <ImageView
        android:id="@+id/titleRightIcon1"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/titleRightIcon"
        android:contentDescription="@string/app_name"

        />

    <ImageView
        android:id="@+id/titleRightIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/titleRightText"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="继续"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:visibility="gone"
        tools:ignore="SpUsage" />
</RelativeLayout>