<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_update"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title_textview_canceldialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="20dp"
            android:text="确定取消授权?"
            android:textColor="@color/colorTextBlack"
            android:textSize="19sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/content_textview_canceldialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="31dp"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="7dp"
            android:paddingTop="30dp"
            android:paddingRight="7dp"
            android:text="取消授权后，对方将无法再查看你的基因报告。"
            android:textColor="#878780"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancel_botton_canceldialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_update"
                android:gravity="center"
                android:text="再想想"
                android:textColor="@color/colorTextBlue" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_color" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/confirm_botton_canceldialog"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:background="@drawable/round_update"
                android:gravity="center"
                android:text="取消授权"
                android:textColor="@color/colorTextBlack" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>